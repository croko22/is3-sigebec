{
    "openapi": "3.0.0",
    "info": {
        "title": "Sigebec API",
        "description": "API para el Sistema de Gesti√≥n de Becas",
        "version": "1.0.0"
    },
    "paths": {
        "/api/becas": {
            "get": {
                "tags": [
                    "Becas"
                ],
                "summary": "Listado de becas",
                "description": "Obtiene un listado de becas",
                "operationId": "getBecas",
                "responses": {
                    "200": {
                        "description": "Listado de becas"
                    }
                }
            },
            "post": {
                "tags": [
                    "Becas"
                ],
                "summary": "Crear una nueva beca",
                "description": "Crea una nueva beca",
                "operationId": "storeBeca",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "required": [
                                    "nombre",
                                    "descripcion"
                                ],
                                "properties": {
                                    "nombre": {
                                        "description": "User first name",
                                        "type": "string"
                                    },
                                    "descripcion": {
                                        "description": "User last name",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Beca creada"
                    },
                    "400": {
                        "description": "Error en la solicitud"
                    }
                }
            }
        },
        "/api/auth": {},
        "/api/becas/{id}": {
            "get": {
                "tags": [
                    "Becas"
                ],
                "summary": "Obtener una beca",
                "description": "Obtiene una beca por ID",
                "operationId": "getBeca",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Beca encontrada"
                    },
                    "404": {
                        "description": "Beca no encontrada"
                    }
                }
            },
            "put": {
                "tags": [
                    "Becas"
                ],
                "summary": "Actualizar una beca",
                "description": "Actualiza una beca por ID",
                "operationId": "updateBeca",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "required": [
                                    "nombre",
                                    "descripcion"
                                ],
                                "properties": {
                                    "nombre": {
                                        "description": "User first name",
                                        "type": "string"
                                    },
                                    "descripcion": {
                                        "description": "User last name",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Beca actualizada"
                    },
                    "404": {
                        "description": "Beca no encontrada"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Becas"
                ],
                "summary": "Eliminar una beca",
                "description": "Elimina una beca por ID",
                "operationId": "deleteBeca",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Beca eliminada"
                    },
                    "404": {
                        "description": "Beca no encontrada"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User login",
                "description": "Logs in a user",
                "operationId": "login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful login"
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User logout",
                "description": "Logs out a user",
                "operationId": "logout",
                "responses": {
                    "200": {
                        "description": "Successful logout"
                    }
                }
            }
        },
        "/api/auth/forgot-password": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Forgot password",
                "description": "Sends a password reset link",
                "operationId": "forgotPassword",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Password reset link sent"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Becas",
            "description": "Becas"
        },
        {
            "name": "Auth",
            "description": "Auth"
        }
    ]
}